<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Shopzada" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainRed</item>
        <item name="colorPrimaryVariant">@color/mainRedVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mainRed</item>
        <item name="colorSecondaryVariant">@color/mainRedVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/kanit_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="BottomNavigation">
        <item name="fontFamily">@font/kanit_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="WheelSpinning">
        <item name="fontFamily">@font/kanit_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

</resources>